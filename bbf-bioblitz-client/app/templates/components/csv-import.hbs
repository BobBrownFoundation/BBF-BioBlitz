{{#file-dropzone class="file-upload" name="csvImport" as |dropzone queue|}}
  {{#if dropzone.active}}
    {{#if dropzone.valid}}
      Drop to upload
    {{else}}
      Invalid
    {{/if}}
  {{else if queue.files.length}}
    Uploading {{queue.files.length}} files. ({{queue.progress}}%)
  {{else}}

    <p>
      {{#if dropzone.supported}}
        Drag and drop CSV files onto this area to upload them or
      {{/if}}
      {{#file-upload name="csvImport"
                     accept="text/csv"
                     multiple=true
                     onfileadd=(action "uploadCsv")}}
        <a id="upload-csv" tabindex=0>Import CSV</a>
      {{/file-upload}}
    </p>
  {{/if}}
{{/file-dropzone}}
